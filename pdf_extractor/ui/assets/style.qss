/*
 * Modern Light-Interface Stylesheet for PDF2PNG
 * Version: 3.2 - Dynamic Font Size
 */

/****************** General Window ******************/
QWidget {
    background-color: #f3f3f3; /* A slightly cooler light gray */
    color: #333333;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: __FONT_SIZE_BASE__px;
}

/****************** Main Panels & Toolbar ******************/
#toolbar {
    background-color: #e9e9ed;
    border-bottom: 1px solid #dcdcdc;
}

#sidebar {
    background-color: #fcfcfc;
    border-left: 1px solid #dcdcdc;
}

#statusBar {
    background-color: #ffffff;
    border-top: 1px solid #e0e0e0;
}

/* Splitter handle */
QSplitter::handle {
    background: #dcdcdc;
    width: 1px;
}
QSplitter::handle:hover {
    background: #007aff;
}


/****************** GroupBox Containers ******************/
QGroupBox {
    background-color: transparent;
    border: none;
    margin-top: 15px;
    padding-top: 10px;
    border-top: 1px solid #e5e5e5;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 0;
    left: 0px;
    font-size: __FONT_SIZE_LARGE__px;
    font-weight: 600;
    color: #2c2c2e;
}


/****************** Buttons ******************/
QPushButton {
    background-color: #ffffff;
    border: 1px solid #c5c5c5;
    border-radius: 6px;
    padding: 8px 14px;
    font-weight: 500;
}

QPushButton:hover {
    border-color: #b0b0b0;
}

QPushButton:pressed {
    background-color: #f0f0f0;
}

QPushButton:disabled {
    background-color: #f5f5f5;
    color: #b0b0b0;
    border-color: #e5e5e5;
}

/* Primary "Start" Button */
#primaryButton {
    background-color: #007aff;
    color: white;
    border: none;
    font-weight: 600;
    font-size: __FONT_SIZE_LARGE__px;
    border-radius: 8px;
}
#primaryButton:hover { background-color: #006ee6; }
#primaryButton:pressed { background-color: #005ecb; }
#primaryButton:disabled { background-color: #d0e7ff; color: #ffffff; }

/* Toolbar Buttons */
#toolbar QPushButton {
    background-color: transparent;
    border: none;
    padding: 6px 10px;
    border-radius: 5px;
}
#toolbar QPushButton:hover { background-color: rgba(0, 0, 0, 0.08); }
#toolbar QPushButton:pressed { background-color: rgba(0, 0, 0, 0.12); }


/****************** Input Fields ******************/
QLineEdit, QSpinBox, QDoubleSpinBox {
    background-color: #ffffff;
    border: 1px solid #d9d9d9;
    border-radius: 5px;
    padding: 8px;
    selection-background-color: #007aff;
    selection-color: white;
}
QLineEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: #007aff;
}

/****************** Checkbox & RadioButton ******************/
QCheckBox, QRadioButton {
    spacing: 8px;
}
QCheckBox::indicator, QRadioButton::indicator { width: 16px; height: 16px; }

QCheckBox::indicator {
    border-radius: 4px;
    border: 1px solid #b0b0b0;
    background-color: #fdfdfd;
}
QCheckBox::indicator:hover { border-color: #007aff; }
QCheckBox::indicator:checked {
    background-color: #007aff;
    border-color: #007aff;
    image: url(data:image/svg+xml;base64,);
}

QRadioButton::indicator {
    border-radius: 8px;
    border: 1px solid #b0b0b0;
    background-color: #fdfdfd;
}
QRadioButton::indicator:hover { border-color: #007aff; }
QRadioButton::indicator:checked {
    background-color: #fdfdfd;
    border: 1px solid #007aff;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPGNpcmNsZSBjeD0iOCIgY3k9IjgiIHI9IjQuNSIgZmlsbD0iIzAwN2FmZiIvPgo8L3N2Zz4K);
}

/****************** Progress Bar ******************/
QProgressBar {
    border: none;
    border-radius: 4px;
    background-color: #e0e0e0;
    min-height: 8px;
    max-height: 8px;
    text-align: center;
}
QProgressBar::chunk {
    background-color: #007aff;
    border-radius: 4px;
}

/****************** Other Widgets ******************/
#statusLabel {
    font-size: __FONT_SIZE_SMALL__px;
    color: #666666;
}

QScrollArea { border: none; }

QListWidget {
    border: none;
    background-color: transparent;
}
QListWidget::item {
    padding: 8px 10px;
    border-radius: 5px;
}
QListWidget::item:hover { background-color: #e9e9ed; }
QListWidget::item:selected { color: #333; background-color: #e0e0e0; }

QFrame[Shape="HLine"] {
    border: none; height: 1px; background-color: #e0e0e0;
}

/* Delete button in file list */
#deleteButton {
    background-color: transparent;
    border: none;
    border-radius: 4px;
    padding: 2px;
}
#deleteButton:hover {
    background-color: #e0e0e0;
}
#deleteButton:pressed {
    background-color: #d0d0d0;
}